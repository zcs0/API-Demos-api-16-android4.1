<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

        <Switch android:text="标准开关"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dip" />

        <Switch android:text="默认为关"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dip" />

        <Switch android:id="@+id/monitored_switch"
                android:text="监控开关"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dip" />

        <Switch android:text="Customized text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="YES"
                android:textOff="NO"
                android:layout_marginBottom="32dip" />

        <Switch android:text="这是一个有很多在它的文本的开关的一个例子。它可能最终缠绕到另一行。交换机将在顶部被固定。"
                android:singleLine="false"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_marginBottom="32dip" />

        <Switch android:text="这是一个有很多在它的文本的开关的一个例子。它可能最终缠绕到另一行。交换机将被垂直居中。"
                android:singleLine="false"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="32dip" />

        <Switch android:text="这是一个有很多在它的文本的开关的一个例子。它可能最终缠绕到另一行。交换机将在底部被固定。"
                android:singleLine="false"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:gravity="bottom|left"
                android:layout_marginBottom="32dip" />

        <Switch android:text="开关与match_parent宽度"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dip" />

        <TextView android:text="以下独立开关:"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

        <Switch android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
